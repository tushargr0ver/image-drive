# ---------- Server Environment (.env.example) ----------
# Copy to .env and fill real values (never commit secrets)

# MongoDB connection string
MONGO_URI=mongodb+srv://username:password@cluster-host/db-name?retryWrites=true&w=majority

# JWT secret (use a long random string)
JWT_SECRET=replace_with_long_random_secret

# Server port (may be overridden by hosting platform)
PORT=5000

# Node environment
NODE_ENV=development

# Comma separated list of allowed origins for CORS
CORS_ALLOWED_ORIGINS=https://image-drive.tushr.xyz,http://localhost:5173

# JWT expiration (optional override)
JWT_EXPIRES_IN=7d

# Uploads directory
UPLOAD_DIR=uploads
